# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

GET     /screens/auth               controllers.ScreenController.authentification(request: Request)

GET     /events                     controllers.EventSourceController.index

GET     /eventsource                controllers.EventSourceController.events

GET     /users/register             controllers.AuthController.index(request: Request)

GET     /users/login                controllers.AuthController.login(request: Request)

POST    /users/register             controllers.AuthController.register(request: Request)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
